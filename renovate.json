{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["com.vrchat.avatars"],
      "allowedVersions": ">= 3.5.0",
      "description": "We need at least 3.5.0 to ensure Unity 2022.",
      "matchDataSources": ["github-release-attachments"],
    },
    {
      "allowedVersions": "!/^.*-beta\\.\\d+$/",
      "description": "disallow beta releases",
      
    }
  ]
}
